{
    "id": "20351007-43bc-45f7-8049-fd725477ed6a",
    "name": "ARecordManager",
    "friendlyName": "A record DNS Manager",
    "description": "Task to create/update an 'A' Dns Record",
    "helpMarkDown": "",
    "category": "Utility",
    "preview": false,
    "author": "Marcos Ramos",
    "version": {
        "Major": 2,
        "Minor": 0,
        "Patch": 0
    },
    "instanceNameFormat": "Manage A Dns record",
    "groups": [
        {
          "name": "subazadadmin",
          "displayName": "GoDaddy account details",
          "isExpanded": true
        },
        {
            "name": "dnszonedetail",
            "displayName": "GoDaddy DNS zone details",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
          "name": "godaddyAccount",
          "type": "connectedService:godaddy-serviceendpoint",
          "label": "GoDaddy service/server endpoint",
          "required": true,
          "defaultValue": "",
          "groupName": "dnszonedetail"
        },
        {
          "name": "actionType",
          "label": "Action type",
          "type": "pickList",
          "defaultValue": "createUpdate",
          "options": {
            "createUpdate": "Create / Update",
            "remove": "Remove"
          },
          "required": false,
          "groupName": "dnszonedetail"
        },
        {
          "name": "domainName",
          "label": "DNS Zone",
          "type": "string",
          "defaultValue": "",
          "required": true,
          "helpMarkDown": "",
          "groupName": "dnszonedetail"
        },
        {
          "name": "aName",
          "type": "string",
          "label": "A record",
          "defaultValue": "",
          "required": true,
          "helpMarkDown": "",
          "groupName": "dnszonedetail"
        },
        {
          "name": "ipAddress",
          "type":"string",
          "label": "Ip Address",
          "defaultValue":"1.0.0.1",
          "required": true,
          "helpMarkDown":"",
          "groupName": "dnszonedetail"
        },
        {
          "name":"ttl",
          "type":"integer",
          "label": "TTL (seconds)",
          "required": true,
          "groupName":"dnszonedetail",
          "defaultValue": "3600",
          "visibleRule":"actionType = createUpdate"
        }
    ],
    "dataSourceBindings" : [
      {
        "target": "godaddyAccount",
        "endpointId": "$(godaddyService)",
        "dataSourceName": "GoDaddyAccounts"
      }
    ],
    "outputVariables" : [],
    "execution": {
        "Node": {
          "target": "manageadnszone.js",
          "argumentFormat": ""
        }
      }
}
