{
    "id": "cfa50459-b783-4744-94c6-c8a8540f7823",
    "name": "CNAMERecordManager",
    "friendlyName": "CNAME record DNS Manager",
    "description": "Task to create/update a 'CNAME' Dns Record",
    "helpMarkDown": "",
    "category": "Utility",
    "preview": false,
    "author": "Marcos Ramos",
    "version": {
        "Major": 2,
        "Minor": 0,
        "Patch": 0
    },
    "instanceNameFormat": "Manage CNAME Dns record",
    "groups": [
        {
            "name": "dnszonedetail",
            "displayName": "GoDaddy DNS zone details",
            "isExpanded": true
        }
    ],
    "inputs": [
        {
          "name": "godaddyAccount",
          "type": "connectedService:godaddy-serviceendpoint",
          "label": "GoDaddy service/server endpoint",
          "required": true,
          "defaultValue": "",
          "groupName": "dnszonedetail"
        },
        {
          "name": "actionType",
          "label": "Action type",
          "type": "pickList",
          "defaultValue": "createUpdate",
          "options": {
            "createUpdate": "Create / Update",
            "remove": "Remove"
          },
          "required": false,
          "groupName": "dnszonedetail"
        },
        {
          "name": "domainName",
          "label": "DNS Zone",
          "type": "string",
          "defaultValue": "",
          "required": true,
          "groupName": "dnszonedetail"
        },
        {
          "name": "cname",
          "type": "string",
          "label": "CNAME record",
          "defaultValue": "",
          "required": true,
          "helpMarkDown": "",
          "groupName": "dnszonedetail"
        },
        {
          "name": "alias",
          "type":"string",
          "label": "Alias",
          "defaultValue":"mydnsalias",
          "required": true,
          "helpMarkDown":"",
          "groupName": "dnszonedetail"
        },
        {
          "name": "ttl",
          "type": "integer",
          "label": "TTL (seconds)",
          "defaultValue": 3600,
          "required": true,
          "groupName": "dnszonedetail",
          "visibleRule": "actionType = createUpdate"
        }
    ],
    "dataSourceBindings" : [
      {
        "target": "godaddyAccount",
        "endpointId": "$(godaddyService)",
        "dataSourceName": "GoDaddyAccounts"
      }
    ],
    "outputVariables" : [],
    "execution": {
        "Node": {
          "target": "managecnamerecord.js",
          "argumentFormat": ""
        }
      }
}
